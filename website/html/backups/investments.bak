  <style>
    :root {
      --accent-pink: #ff69b4;
      --dark-bg-1: #0b0b0b;
      --dark-bg-2: #1a1a1a;
      --accent-purple: #a259ff;
      --accent-green: #5cffb0;
      --accent-green-strong: #90ffcd;
      --transition-fast: 0.3s ease;
    }

    /* Reset & Base */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
  font-family: 'Roboto', sans-serif;
  background: 
    linear-gradient(rgba(11, 11, 11, 0.85), rgba(26, 26, 26, 0.85)),
    url('rexxy.jpeg') no-repeat center center fixed;
  background-size: cover;
  color: var(--accent-pink);
  animation: background-shift 60s var(--transition-fast) infinite alternate;
  line-height: 1.5;
}


    @keyframes background-shift {
      from { background: linear-gradient(50deg, var(--dark-bg-1), var(--dark-bg-2)); }
      to   { background: linear-gradient(50deg, var(--dark-bg-2), var(--dark-bg-1)); }
    }

    /* Header & Navigation */
    header {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background: var(--dark-bg-2);
      border-bottom: 2px solid rgba(162, 89, 255, 0.3);
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.6);
      padding: 1rem 2rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      z-index: 1000;
    }

    .site-title {
      font-family: 'Rubik Mono One', sans-serif;
      font-weight: bold;
      color: var(--accent-purple);
      text-decoration: none;
      font-size: 1.5rem;
      text-shadow: 0 0 6px rgba(162, 89, 255, 0.9);
      transition: color var(--transition-fast);
    }


    .site-title:hover {
      color: var(--accent-green);
    }

    nav {
      font-family: 'Rubik Mono One', sans-serif;
      display: flex;
      gap: 1rem;
    }

    nav a {
      font-family: 'Rubik Mono One', sans-serif;
      position: relative;
      color: var(--accent-purple);
      text-decoration: none;
      font-weight: bold;
      padding: 0.25rem 0.5rem;
      transition: color var(--transition-fast);
    }

    nav a::after {
      content: '';
      position: absolute;
      bottom: -3px;
      left: 0;
      width: 0;
      height: 2px;
      background: var(--accent-pink);
      transition: width var(--transition-fast);
    }

    nav a:hover {
      color: var(--accent-pink-strong);
    }

    nav a:hover::after {
      width: 100%;
    }

    /* Hamburger Button */
    .menu-toggle {
      display: none;
      flex-direction: column;
      justify-content: space-between;
      width: 28px;
      height: 22px;
      cursor: pointer;
      z-index: 1100;
    }

    .menu-toggle span {
      display: block;
      height: 3px;
      background: var(--accent-pink);
      border-radius: 2px;
      transition: transform var(--transition-fast), opacity var(--transition-fast);
    }

    /* Mobile Nav */
    @media (max-width: 700px) {
      .menu-toggle {
        display: flex;
      }
      nav {
	font-family: 'Rubik Mono One', sans-serif;     
	font-weight: normal;      
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: var(--dark-bg-1);
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        font-size: .7 rem;
        opacity: 0;
        pointer-events: none;
        transform: scale(1.05);
        transition: opacity var(--transition-fast),
                    transform var(--transition-fast);
      }
      nav.show {
        opacity: 1;
        pointer-events: auto;
        transform: scale(1);
      }
    }

    /* Hamburger â†” X Animation */
    .menu-toggle.open span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }
    .menu-toggle.open span:nth-child(2) {
      opacity: 0;
    }
    .menu-toggle.open span:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }

    /* Main Content Offset */
    main {
      padding: 6rem 2rem 2rem;
      max-width: 1000px;
      margin: auto;
    }

    /* Hero */
    .hero {
      text-align: center;
      padding: 4rem 2rem;
    }

    .hero h2 {
      font-family: 'Rubik Mono One', sans-serif;
      font-size: 2.5rem;
      font-weight: normal;
      color: var(--accent-pink);
      text-shadow:
        0 0 6px rgba(162, 89, 255, 0.9),
        0 0 18px rgba(92, 255, 176, 0.6);
      margin-bottom: 1rem;
    }

    .hero p {
      font-weight: normal;
      font-family: 'Roboto', sans-serif;
      font-size: clamp(1rem, 1.2vw + 0.5rem, 1.5rem);
      line-height: 1.6;
    }

    .buttons {
      margin-top: 2rem;
    }

    .btn {
      font-family: 'Roboto', sans-serif;
      background: transparent;
      border: 2px solid var(--accent-pink);
      color: var(--accent-pink);
      padding: 0.75rem 1.5rem;
      margin: 0.5rem;
      cursor: pointer;
      font-size: 1rem;
      transition: all var(--transition-fast);
      text-shadow: 0 0 6px rgba(92, 255, 176, 0.8);
    }

    .btn:hover {
      background: var(--accent-green);
      color: var(--dark-bg-1);
      transform: scale(1.05);
    }

    .btn a {
      color: inherit;
      text-decoration: none;
      display: inline-block;
      width: 100%;
      height: 100%;
    }

    /* Sections */
    section {
