  <style>
    :root {
      --dark-bg-1: #0b0b0b;
      --dark-bg-2: #1a1a1a;
      --accent-purple: #a259ff;
      --accent-green: #5cffb0;
      --accent-green-strong: #90ffcd;
    }
    body {
      margin: 0;
      font-family: system-ui, sans-serif;
      background: linear-gradient(50deg, var(--dark-bg-1), var(--dark-bg-2));
      color: var(--accent-green);
      animation: background-shift 60s ease-in-out infinite;
    }
    header {
      font-family: system-ui, sans-serif;	    
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: relative;
      border-bottom: 2px solid rgba(162, 89, 255, 0.3);
      background: var(--dark-bg-2);
      box-shadow: 0 2px 6px rgba(0,0,0,0.6);
    }
    header h1 {
      font-family: system-ui, sans-serif;
      font-size: 1.5rem;
      margin: 0;
    }
    .site-title {
      color: var(--accent-purple);
      text-decoration: none;
      text-shadow: 0 0 6px rgba(162, 89, 255, 0.9);
    }
    .site-title:hover {
      color: var(--accent-green);
    }
    nav a {
      color: var(--accent-green);
      text-decoration: none;
      font-weight: bold;
      padding: 0.25rem 0.5rem;
    }
    nav a:hover {
      color: var(--accent-green-strong);
    }
    .menu-toggle {
      display: none;
      flex-direction: column;
      cursor: pointer;
      gap: 4px;
      z-index: 1100;
    }
    .menu-toggle span {
      width: 25px;
      height: 3px;
      background: var(--accent-purple);
      border-radius: 2px;
      transition: background 0.3s ease;
    }
    .nav-links {
      display: flex;
      gap: 0.75rem;
    }
    @media (max-width: 700px) {
      .menu-toggle { display: flex; }
      .nav-links {
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 100vw;
        background: var(--dark-bg-1);
        opacity: 0;
        pointer-events: none;
        transform: scale(1.05);
        transition: opacity 0.4s ease, transform 0.4s ease;
        gap: 1.5rem;
        font-size: 1.4rem;
        z-index: 1000;
      }
      .nav-links.show {
        opacity: 1;
        pointer-events: auto;
        transform: scale(1);
      }
    }
    .hero {
      text-align: center;
      padding: 4rem 2rem;
    }
    .hero h2 {
      font-size: 2.5rem;
      text-shadow: 0 0 6px rgba(162, 89, 255, 0.9),
                   0 0 18px rgba(92, 255, 176, 0.6);
      margin-bottom: 1rem;
      color: var(--accent-purple);
    }
    .hero p {
      font-size: clamp(1rem, 1.2vw + 0.5rem, 1.5rem);
      line-height: 1.6;
      max-width: 700px;
      margin: 0 auto;
    }
    .buttons {
      margin-top: 2rem;
    }
    .btn {
      background: transparent;
      border: 2px solid var(--accent-green);
      color: var(--accent-green);
      padding: 0.75rem 1.5rem;
      margin: 0.5rem;
      cursor: pointer;
      font-size: 1rem;
      transition: all 0.3s ease;
      text-shadow: 0 0 6px rgba(92, 255, 176, 0.8);
    }
    a.btn {
      text-decoration: none;
      display: inline-block;
    }
    .btn:hover {
      background: var(--accent-green);
      color: var(--dark-bg-1);
      transform: scale(1.05);
    }
    section {
      padding: 3rem 2rem;
      max-width: 1000px;
      margin: auto;
    }
    section h3 {
      text-align: center;
      font-size: 2rem;
      margin-bottom: 1rem;
      text-shadow: 0 0 6px rgba(162, 89, 255, 0.8);
      color: var(--accent-purple);
    }
    section p {
      text-align: center;
      line-height: 1.6;
      font-size: clamp(1rem, 1.2vw + 0.5rem, 1.5rem);
    }
    footer {
      background: var(--dark-bg-2);
      text-align: center;
      padding: 1rem;
      margin-top: 3rem;
      font-size: 0.9rem;
    }
    @keyframes background-shift {
      0%   { background: linear-gradient(50deg, var(--dark-bg-1), var(--dark-bg-2)); }
      50%  { background: linear-gradient(50deg, var(--dark-bg-2), var(--dark-bg-1)); }
      100% { background: linear-gradient(50deg, var(--dark-bg-1), var(--dark-bg-2)); }
    }
